  // Main jumbotron for a primary marketing message or call to action
  .jumbotron
    .container
      h1.display-3(style='color: bisque;') Explore
      p(style='color: bisque')
        | noun:
        br
        |       to search and discover.
      h2(style='text-align: center; font-weight: bold;') Seek. Find.
      p
  .container
    // Example row of columns
    
    .row
      each package in data
          .packageclass.col-md-6
            h2=package.PkgName
              | 
              span=`$${package.PkgBasePrice}`
                a.button.btn.btn-info(id=package.PkgName href=`/book/${package._id}` type='button' style='margin:5px') Book
            img(src=package.PkgImg alt='Playa-de-las-Americas' style='width:100%')
            h4=`Duration: ${Math.floor((package.PkgEndDate-package.PkgStartDate)/1000/60/60/24/7)} weeks`
            h4=`Start: ${package.PkgStartDate.toDateString()}`
            span.dateclass.d-none=package.PkgStartDate
            p=package.PkgDesc
          
     
    
    hr
