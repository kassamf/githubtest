extends layout

block content
    .row    
      .col-sm-12.col-md-6.col-lg-6
        table.table.table-borderless
          thead
            tr
              th(scope='col') First
              th(scope='col') Last
              th(scope='col') Email
          tbody
            tr
              th(scope='row') Customer
              td Mark
              td Otto
              td @mdo
            tr
              th(scope='row') Agent
              td Jacob
              td Thornton
              td @fat
            

      .col-sm-12.col-md-6.col-lg-6
        .card.m-2
          img.card-img-top(style='width:200px' src=`../../${package.PkgImg}` alt='Package anme')
          .card-body
            h5.card-title=package.PkgName
            p.card-text
              | #{package.PkgDesc}
            p.card-text
              | #{package.PkgStartDate.toDateString()}
            p.card-text
              | #{package.PkgEndDate.toDateString()}
            p.card-text
              small.text-muted #{package.PkgBasePrice}
            a.btn.btn-primary(href='/packages/book/') Book
