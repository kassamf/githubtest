.row.mb-2
  .col-md-6(style= 'background-image: url("../images/havana_gettyimages-989434672.jpg")')
   
main.container.pt-3(style='background: rgba(253, 160, 101,0.7); padding:15px')
  - var agencyIndex =[0,1];
  .row
   each val in agencyIndex 
    .col-md-6 
      .bd-example(style='margin-top: 25px;')
        address
        strong Travel Experts
        br
        |           #{blogPosts[val].AgncyAddress}
        br
        |           #{blogPosts[val].AgncyCity +" "+blogPosts[0].AgncyProv}
        br
        |           #{blogPosts[val].AgncyCountry}
        br
        abbr(title='Phone') P:
        |  #{blogPosts[val].AgncyPhone}
   
  -var agentIndex = [0,1,2,3]

  .row
   each val in agentIndex 
    .col-md-6
      address
      strong #{blogAgents1[val].AgtFirstName+" "+blogAgents1[0].AgtLastName}
      br
      abbr(title='Phone') P:
      |  #{blogAgents1[val].AgtBusPhone}
      br
      strong E-mail:
      a(href='mailto:#{blogAgents1[val].AgtEmail}') #{blogAgents1[val].AgtEmail}
      br

    .col-md-6
      address
      strong #{blogAgents2[val].AgtFirstName+" "+blogAgents2[0].AgtLastName}
